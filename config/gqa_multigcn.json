{
  "dataset": {
    "name": "gqa",
    "filemap": {
      "root": "./data/gqa"
    }
  },
  "preprocessing": {
    "cache": {
      "root": "./cache",
      "artifact": "gqa-preprocessed"
    },
    "pipeline": [{
      "feature": "scene_graphs",
      "split": "train"
    },
    {
      "feature": "scene_graphs",
      "split": "val"
    },
    {
      "feature": "questions",
      "split": "train",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "val",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "testdev",
      "version": "balanced"
    }]
  },
  "model": {
    "name": "multi_gcn",
    "text_dependency_graph": {
      "gcn": "gcn",
      "pooling": "global_mean",
      "layer_sizes": [300, 512, 768, 1024]
    },
    "object_semantic_graph": {
      "gcn": "gcn",
      "pooling": "global_mean",
      "layer_sizes": [1703, 1024]
    }
  },
  "training": {
    "epochs": 25,
    "log_step": 64,
    "eval_subset": null,
    "dataloader": {
      "batch_size": 256,
      "workers": 1
    },
    "optimiser": {
      "name": "adam",
      "learning_rate": 0.001,
      "momentum": null,
      "weight_decay": 5e-4
    },
    "data": {
      "features": [
        {
          "name": "questions",
          "artifact": "gqa-preprocessed:latest"
        },
        {
          "name": "scene_graphs",
          "artifact": "gqa-preprocessed:latest"
        }
      ],
      "train": {
        "split": "train",
        "version": "balanced"
      },
      "val": {
        "split": "val",
        "version": "balanced"
      },
      "test": {
        "split": "testdev",
        "version": "balanced"
      }
    }
  }
}
