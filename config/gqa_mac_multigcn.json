{
  "dataset": {
    "name": "gqa",
    "filemap": {
      "root": "./data/gqa"
    }
  },
  "preprocessing": {
    "cache": {
      "root": "./cache",
      "artifact": "gqa-preprocessed"
    },
    "pipeline": [{
      "feature": "scene_graphs",
      "split": "train"
    },
    {
      "feature": "scene_graphs",
      "split": "val"
    },
    {
      "feature": "questions",
      "split": "train",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "val",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "testdev",
      "version": "balanced"
    }]
  },
  "model": {
    "name": "mac_multi_gcn",
    "mac": {
      "length": 6,
      "hidden_dim": 512
    },
    "text_syntactic_graph": {
      "gcn": "gat",
      "pooling": null,
      "layer_sizes": [300, 300, 512]
    },
    "scene_graph": {
      "gcn": "gat",
      "pooling": null,
      "layer_sizes": [300, 300, 512],
      "max_objects": 512
    }
  },
  "training": {
    "epochs": 20,
    "log_step": 256,
    "eval_subset": null,
    "dataloader": {
      "batch_size": 64,
      "workers": 1
    },
    "optimiser": {
      "name": "adam",
      "learning_rate": 1e-4,
      "momentum": null,
      "weight_decay": 5e-4,
      "grad_clip": 8,
      "schedule": true
    },
    "data": {
      "features": [
        {
          "name": "questions",
          "artifact": "gqa-preprocessed:latest"
        },
        {
          "name": "scene_graphs",
          "artifact": "gqa-preprocessed:latest"
        }
      ],
      "train": {
        "split": "train",
        "version": "balanced"
      },
      "val": {
        "split": "val",
        "version": "balanced"
      },
      "test": {
        "split": "testdev",
        "version": "balanced"
      }
    }
  }
}
