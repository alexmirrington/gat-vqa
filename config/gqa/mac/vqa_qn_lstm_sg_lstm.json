{
  "dataset": {
    "name": "gqa",
    "filemap": {
      "root": "./data/gqa"
    }
  },
  "preprocessing": {
    "cache": {
      "root": "./cache",
      "artifact": "gqa-preprocessed"
    },
    "pipeline": [{
      "feature": "scene_graphs",
      "split": "train"
    },
    {
      "feature": "scene_graphs",
      "split": "val"
    },
    {
      "feature": "questions",
      "split": "train",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "val",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "train",
      "version": "all"
    },
    {
      "feature": "questions",
      "split": "val",
      "version": "all"
    }]
  },
  "model": {
    "name": "vqa",
    "reasoning": {
      "name": "mac",
      "length": 6,
      "hidden_dim": 512
    },
    "question": {
      "embedding": {
        "init": "glove",
        "dim": 300,
        "trainable": true,
        "average_mwt": true
      },
      "module": {
        "name": "lstm",
        "hidden_dim": 512,
        "bidirectional": true
      }
    },
    "scene_graph": {
      "embedding": {
        "init": "glove",
        "dim": 300,
        "trainable": false,
        "average_mwt": true
      },
      "graph": {
        "directed": true,
        "object_skip_edges": true,
        "aggregation": "per_obj_concat_mean_rel_attr"
      },
      "module": {
        "name": "lstm",
        "hidden_dim": 512,
        "bidirectional": true
      }
    }
  },
  "training": {
    "epochs": 25,
    "log_step": 512,
    "dataloader": {
      "batch_size": 32,
      "workers": 1
    },
    "optimiser": {
      "name": "adam",
      "learning_rate": 3e-4,
      "momentum": null,
      "weight_decay": 0,
      "grad_clip": 8,
      "schedule": false
    },
    "data": {
      "features": [
        {
          "name": "questions",
          "artifact": "gqa-preprocessed:v11"
        },
        {
          "name": "scene_graphs",
          "artifact": "gqa-preprocessed:v11"
        }
      ],
      "train": {
        "split": "train",
        "version": "balanced"
      },
      "val": {
        "split": "val",
        "version": "balanced",
        "subset": [0.0, 0.5]
      },
      "test": {
        "split": "val",
        "version": "balanced",
        "subset": [0.5, 1.0]
      }
    }
  },
  "prediction": {
    "dataloader": {
      "batch_size": 16,
      "workers": 1
    },
    "data": {
      "features": [
        {
          "name": "questions",
          "artifact": "gqa-preprocessed:v13"
        },
        {
          "name": "scene_graphs",
          "artifact": "gqa-preprocessed:v13"
        }
      ],
      "train": {
        "split": "train",
        "version": "all"
      },
      "val": {
        "split": "val",
        "version": "all"
      },
      "test": {
        "split": "val",
        "version": "all"
      }
    }
  }
}
