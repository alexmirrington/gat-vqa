{
  "dataset": {
    "name": "gqa",
    "filemap": {
      "root": "./data/gqa"
    }
  },
  "preprocessing": {
    "cache": {
      "root": "./cache",
      "artifact": "gqa-preprocessed"
    },
    "pipeline": [{
      "feature": "scene_graphs",
      "split": "train"
    },
    {
      "feature": "scene_graphs",
      "split": "val"
    },
    {
      "feature": "questions",
      "split": "train",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "val",
      "version": "balanced"
    },
    {
      "feature": "questions",
      "split": "testdev",
      "version": "balanced"
    }]
  },
  "model": {
    "name": "faster_rcnn",
    "pretrained": false,
    "backbone": {
      "name": "resnet50",
      "pretrained": true
    }
  },
  "training": {
    "epochs": 25,
    "log_step": 512,
    "eval_subset": 8192,
    "dataloader": {
      "batch_size": 1,
      "workers": 1
    },
    "optimiser": {
      "name": "sgd",
      "learning_rate": 0.001,
      "momentum": 0.9,
      "weight_decay": 5e-4
    },
    "data": {
      "features": [
        {
          "name": "questions",
          "artifact": "gqa-preprocessed:latest"
        },
        {
          "name": "scene_graphs",
          "artifact": "gqa-preprocessed:latest"
        },
        {
          "name": "images",
          "artifact": null
        }
      ],
      "train": {
        "split": "train",
        "version": "balanced"
      },
      "val": {
        "split": "val",
        "version": "balanced"
      },
      "test": {
        "split": "testdev",
        "version": "balanced"
      }
    }
  }
}
